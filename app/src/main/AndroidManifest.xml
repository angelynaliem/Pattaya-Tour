<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tim.pattayatour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_beach"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".airport.MainActivityAirport"
            android:configChanges="orientation"
            android:label="@string/get_here"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".adult.MainActivityAdult"
            android:configChanges="orientation"
            android:label="@string/adult_activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".family.MainActivityFamily"
            android:configChanges="orientation"
            android:label="@string/family_activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".lodging.MainActivityLodging"
            android:configChanges="orientation"
            android:label="@string/accommodations"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".shopping.MainActivityShopping"
            android:configChanges="orientation"
            android:label="@string/shopping"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>