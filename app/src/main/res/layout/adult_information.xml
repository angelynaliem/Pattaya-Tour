<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adult_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adult_info_header"
            style="@style/adult_info_header_text_view" />

        <TextView
            style="@style/AdultInformationText"
            android:layout_below="@+id/adult_info_header"
            android:text="@string/adult_information" />

    </RelativeLayout>
</ScrollView>